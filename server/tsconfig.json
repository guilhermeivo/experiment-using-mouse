{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".", 
        "paths": {
            "@Application/*": ["./src/Application/*"],
            "@Domain/*": ["./src/Domain/*"],
            "@Infrastructure/*": ["./src/Infrastructure/*"],
            "@Api/*": ["./src/Api/*"]
        }
    },
    "include": ["src"]
}