{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": "./src", 
        "paths": {
            "@Application/*": ["./Application/*"],
            "@Domain/*": ["./Domain/*"],
            "@Infrastructure/*": ["./Infrastructure/*"],
            "@Api/*": ["./Api/*"]
        }
    }
}