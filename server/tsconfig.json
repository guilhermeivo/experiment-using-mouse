{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "lib": ["es6"],
    "rootDir": "src", 
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, 
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true 
  },
  "include": ["src/**/*", "src/uploads/*"],
  "exclude": ["test/*"]
}
